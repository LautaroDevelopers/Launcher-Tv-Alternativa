<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado: Enfocado (Seleccionado con el control) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/card_background_focused" />
            <stroke android:width="1dp" android:color="@color/gold" />
        </shape>
    </item>
    
    <!-- Estado: Normal -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#33FFFFFF" /> <!-- Blanco al 20% -->
            <stroke android:width="0dp" android:color="@color/transparent" />
        </shape>
    </item>
</selector>